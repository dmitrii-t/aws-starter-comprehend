{
  "compilerOptions": {
    "outDir": "./bin",
    "rootDir": "./src",
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2016",
      "es2017.object",
      "es2017.string"
    ],
    "esModuleInterop": true,

    "declaration": false,

    "inlineSources": false,
    "inlineSourceMap": false,

    "alwaysStrict": true,
    "experimentalDecorators": true,

    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,

    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "webpack.config.ts",
    "**/*.test.ts",
    "node_modules",
    "tools",
    "bin"
  ]
}
